= form_for @place_record do |f|
  - if @place_record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@place_record.errors.count, "error")} prohibited this place_record from being saved:"
      %ul
        - @place_record.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :lon
    = f.text_field :lon
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
